<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Management - Marketpicks</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">FoodDeck</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/products">Products</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/users">Users</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Jumbotron -->
  <div class="jumbotron text-center">
    <h1 class="display-4">Manage Users</h1>
    <p class="lead">View and manage registered users.</p>
    <hr class="my-4">
    <p>All registered users are listed below.</p>
  </div>

  <!-- Users Section -->
  <div class="container">
    <div class="row">
      <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= user.name %></h5>
                <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
                <p class="card-text"><strong>Coupons:</strong> 
                  <% if (user.coupons.length > 0) { %>
                    <%= user.coupons.join(", ") %>
                  <% } else { %>
                    None
                  <% } %>
                </p>
             <a href="/users/<%= user._id %>" class="btn btn-primary">View User</a>
<form action="/users/?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
  <input type="hidden" name="email" value="<%= user.email %>">
  <button type="submit" class="btn btn-danger">Delete</button>
</form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-md-12 text-center">
          <p class="lead">No users yet</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS, Popper.js, and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>